<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#D8D8D8"
    tools:context="com.javier.jmreservas.VistaReservas">

    <TextView
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/tituloMisReservas"
        android:id="@+id/txt1"
        android:layout_gravity="center_horizontal" />

    <CheckBox
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/elim"
        android:id="@+id/chEliminar" />

    <ListView
        android:divider="@android:drawable/button_onoff_indicator_off"
        android:dividerHeight="6dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/listaReservas"
        android:choiceMode="none"
        android:layout_gravity="center_horizontal" />
</LinearLayout>
